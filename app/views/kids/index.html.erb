<div class="album text-muted">
  <div class="container">
    <div class="row">
      <% @kids.each do |kid| %>
        <div class="col-md-4">
          <div class="card mb-3">
            <div class="row">
              <div class="col-3">
                  <%= image_tag kid.photo %>
              </div>
              <div class="col-9">
                <p class="card-text"><strong><%= link_to kid.name, kid %></strong></p>
                <p class="card-text"><%= kid.age %> years old</p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>