<section class="jumbotron text-center">
  <div class="container">
    <% if @kid %>
      <%= image_tag @kid.photo, class: 'avatar' %>
      <p class="lead text-muted">Age: <%= @kid.age %></p>
    <% end %>
    <h1 class="jumbotron-heading"><%= @page_title %></h1>
    <p class="lead text-muted"><%= @page_description %></p>
  </div>
</section>