<div class="album text-muted">
  <div class="container">
    <div class="row">
      <% @user.sites.each do |site| %>
        <div class="col-md-4">
          <div class="card mb-3">
            <div class="card-block">
              <p class="card-text"><%= link_to site.name, "http://#{site.subdomain}.lvh.me:3000" %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>